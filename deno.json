{
  "name": "@scirexs/cf-storage-adapter",
  "version": "0.1.0",
  "license": "MIT",
  "exports": "./src/mod.ts",
  "publish": {
    "include": [
      "src/",
      "README.md",
      "LICENSE",
      "deno.json"
    ]
  },
  "nodeModulesDir": "auto",
  "compilerOptions": {
    "lib": ["esnext"],
    "module": "esnext",
    "moduleResolution": "bundler",
    "types": ["./worker-configuration.d.ts"]
  },
  "tasks": {
    "test": "deno run -A ./tests/prep.ts && deno test -A"
  },
  "lint": {
    "include": ["src/", "tests/"],
    "rules": {
      "tags": ["recommended"],
      "exclude": ["no-unused-vars", "no-window", "no-unversioned-import"]
    }
  },
  "fmt": {
    "include": ["src/", "tests/"],
    "lineWidth": 140
  },
  "imports": {
    "@std/assert": "jsr:@std/assert@^1.0.15",
    "esbuild": "npm:esbuild@^0.25.11",
    "miniflare": "npm:miniflare@^4.20251011.1",
    "cloudflare:workers": "./tests/worker.ts"
  }
}
